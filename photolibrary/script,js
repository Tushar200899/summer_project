function portrait_show(){
    document.getElementById("opt1").style.display = 'flex';
    document.getElementById("opt2").style.display = 'none';
    document.getElementById("opt3").style.display = 'none';
    document.getElementById('defaultg').style.display ='none';
}
function nature_show(){
    document.getElementById("opt2").style.display = 'flex';
    document.getElementById("opt1").style.display = 'none';
    document.getElementById("opt3").style.display = 'none';
    document.getElementById('defaultg').style.display ='none';
}
function commercial_show(){
    document.getElementById("opt3").style.display = 'flex';
    document.getElementById("opt1").style.display = 'none';
    document.getElementById("opt2").style.display = 'none';
    document.getElementById('defaultg').style.display ='none';
}
function ext_p(){
    document.getElementById('km').style.display = 'block';
}
